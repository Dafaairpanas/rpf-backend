{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "useTabs": false,
  "printWidth": 120,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "html",
        "printWidth": 120,
        "tabWidth": 4
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "phpVersion": "8.1",
        "trailingCommaPHP": true
      }
    }
  ]
}